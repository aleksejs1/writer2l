{% extends 'base.html.twig' %}

{% set label = 'Create' %}
{% if new is not defined or new != true %}
    {% set label = 'Update' %}
{% endif %}
{% block title %}{{ label }} Character{% endblock %}
{% block pageTitle %}{{ label }} {{ character.shortName ? 'character' }}{% endblock %}

{% block body %}
    <div class="card card-custom">
        <div class="card-body">
            <div class="tab-content">
                {{ include('character/_form.html.twig', {'button_label': label}) }}
                <a href="{{ path('character_list', {'project': project.id}) }}">back to list</a>
                {{ include('character/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
