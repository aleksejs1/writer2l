{% if new is not defined or new != true %}
    <form method="post" action="{{ path('scene_delete', {"project": scene.chapter.project.id, "chapter": scene.chapter.id, 'scene': scene.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ scene.id) }}">
        <button class="btn btn-danger float-md-right btn-act">Delete</button>
    </form>
{% endif %}
