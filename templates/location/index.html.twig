{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    <div class="py-5 text-center">
        <h1>Location index</h1>
    </div>
    <div class="row">
        <div class="col-md-12 md-12">
            <a class="btn btn-light" href="{{ path('project_show', {'project': project.id}) }}">Project</a>
            <table class="table">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Aka</th>
                    <th>Description</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for location in locations %}
                    <tr>
                        <td>{{ location.title }}</td>
                        <td>{{ location.aka }}</td>
                        <td>{{ location.description }}</td>
                        <td>
                            <a href="{{ path('location_edit', {'location': location.id, 'project': project.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('location_new', {'project': project.id}) }}">Create new</a>
        </div>
    </div>


{% endblock %}
