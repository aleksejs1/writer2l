{% if new is not defined or new != true %}
<form method="post" action="{{ path('location_delete', {'location': location.id, 'project': project.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.id) }}">
    <button class="btn">Delete</button>
</form>
{% endif %}
