{% block pageTitle %}{{ label }} {{ chapter.title ? 'chapter' }}{% endblock %}

{% block body %}
    <div class="card card-custom">
        <div class="card-body">
            <div class="tab-content">
                {{ include('chapter/_form.html.twig', {'button_label': label}) }}
                {{ include('chapter/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
