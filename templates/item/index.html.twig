{% extends 'base.html.twig' %}

{% block title %}Item index{% endblock %}

{% block body %}
    <div class="py-5 text-center">
        <h1>Item index</h1>
    </div>
    <div class="row">
        <div class="col-md-12 md-12">
            <a class="btn btn-light" href="{{ path('project_show', {'project': project.id}) }}">Project</a>
            <table class="table">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Aka</th>
                    <th>Description</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.title }}</td>
                        <td>{{ item.aka }}</td>
                        <td>{{ item.description }}</td>
                        <td>
                            <a href="{{ path('item_edit', {'item': item.id, 'project': project.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('item_new', {'project': project.id}) }}">Create new</a>
        </div>
    </div>


{% endblock %}
